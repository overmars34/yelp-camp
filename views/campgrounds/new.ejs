<%include ../partials/header%>

<h1 style="text-align: center">Create a New Campground</h1>

<div class="container">
    <div class="row">
        <div style="width: 30%; margin:25px auto; ">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="campname" placeholder="Camp Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="campprice" placeholder="Camp Price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="imgurl" placeholder="Image URL">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="desc" placeholder="Camp Description">
                </div>
                <div class="form-group">
                    <input class="btn btn-primary btn-lg btn-block" type="submit">
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>


<%include ../partials/footer%>