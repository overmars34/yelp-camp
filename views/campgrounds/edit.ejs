<%include ../partials/header%>

<h1 style="text-align: center">Edit Campground <%= camp.name%></h1>

<div class="container">
    <div class="row">
        <div style="width: 30%; margin:25px auto; ">
            <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[name]" value="<%= camp.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="camp[price]" value="<%= camp.price%>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[img]" value="<%= camp.img %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[desc]" value="<%= camp.desc%>">
                </div>
                <div class="form-group">
                    <input class="btn btn-primary btn-lg btn-block" type="submit">
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>


<%include ../partials/footer%>